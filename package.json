{
    "name": "php-helpfull-snippets",
    "displayName": "Php helpfull snippets",
    "description": "PHP helpfull snippets provides a set of snippets for PHP developers - VScode Extension",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./src/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "php-helpfull-snippets.createSimpleFile",
                "title": "PHP: Create simple php file"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "php-helpfull-snippets.createSimpleFile",
                    "when": "explorerResourceIsFolder",
                    "group": "navigation@-1"
                }
            ]
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "eslint": "^8.28.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "typescript": "^4.9.3",
        "@vscode/test-electron": "^2.2.0"
    }
}